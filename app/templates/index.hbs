<div style='margin-bottom: 20px;'>
  <div style='display: inline-block;'>
    <h3>Filter</h3>
    <button {{action 'filterByIdMod10'}}>Filter by id mod 10</button>
  </div>

  <div style='display: inline-block; margin-left: 20px;'>
    <h3>Login Status</h3>
    <span style='font-weight: bold'>Logged In? {{session.loggedIn}}</span>
    <button {{action 'toggleLogin'}}>Toggle Login</button>
  </div>
</div>

<div style='display: flex'>
  {{#each model as |widget|}}
    <div style='margin-left: 10px'>
      {{x-widget widget=widget}}
    </div>
  {{/each}}
</div>

<div style='margin-top: 20px;'>
  <button disabled={{if (eq page 1) true}} {{action 'prev'}}>Prev</button>
  <button {{action 'next'}}>Next</button>

  <span>Total Records: {{total}}</span>
</div>
